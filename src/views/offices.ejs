<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Oficinas - Renta Vehiculos</title>
    <link rel="stylesheet" href="/css/offices.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <script src="https://api.mqcdn.com/sdk/mapquest-js/v1.3.2/mapquest.js"></script>
    <link type="text/css" rel="stylesheet" href="https://api.mqcdn.com/sdk/mapquest-js/v1.3.2/mapquest.css" />
</head>

<body>
    <!--Lista de oficinas-->
    <div class="container">
        <!--Lista de oficinas con un list-->
        <ul class="list-group">
            <!--Iteramos sobre el array de oficinas-->
            <% array.forEach(function(office) { %>
                <li class="list-group-item">
                    <div class="row">
                        <div class="col-8">
                            <h5>
                                <%= office.name %>
                            </h5>
                            <p>
                                <%= office.address %>
                            </p>
                            <p>
                                <%= office.phone %>
                            </p>
                        </div>
                    </div>
                </li>
                <% }) %>
        </ul>
        <div class="row">
            <!--Mapa con un frame-->
            <div class="row">
                <div class="col-12">
                    <h2 class="titulo-pagina text-center">Oficinas</h2>
                    <div id="map" style="height: 400px;"></div>
                </div>
            </div>
        </div>


        <script src="/js/offices.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
        <!--MapQuest-->
        <script>
            fetch('/api/mapquest-key')
                .then(response => response.json())
                .then(data => {
                    L.mapquest.key = data.key;
                    // 'map' refers to a <div> element with the ID map
                    L.mapquest.map('map', {
                    center: [37.7749, -122.4194],
                    layers: L.mapquest.tileLayer('map'),
                    zoom: 12
                });
            });
                    
        </script>
</body>

</html>