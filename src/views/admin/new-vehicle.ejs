<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>Nuevo vehículo - RentEasy</title>
</head>

<body>

    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        form {
            margin: 20px auto !important;
            max-width: 800px;
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.6) !important;
        }

        header {
            background-color: #007bff;
            color: white;
            padding: 10px 0;
            text-align: center;
            margin-bottom: 20px;
        }

        a {
            display: block;
            text-align: center;
            margin-top: 20px;
        }

        a:hover {
            text-decoration: none;
        }

        h1 {
            margin: 0;
        }

        input[type="file"] {
            padding: 5px;
        }

        button {
            margin-top: 20px;
        }

        .row {
            margin: 0;
        }

        .col-md-6 {
            padding: 0 15px;
        }

        .col-12 {
            padding: 0 15px;
        }

        .form-select {
            padding: 5px;
        }

        .form-control {
            padding: 5px;
        }

        .form-label {
            margin-bottom: 5px;
        }

        .btn-primary {
            background-color: #007bff;
            border: none;
        }

        .btn-primary:hover {
            background-color: #0056b3;
        }

        .btn-primary:active {
            background-color: #004286;
        }

        .btn-primary:focus {
            box-shadow: 0 0 0 0.25rem rgba(38, 143, 255, 0.5);
        }

        .back {
            text-align: center;
            margin: 20px 40% !important;
            background-color: #6c757d;
            color: white;
            padding: 10px;
            border-radius: 5px;
            text-decoration: none;
            transition: all 0.3s ease;
        }

        .back:hover {
            text-decoration: none;
            color: white;
            background-color: #393d41;
        }
    </style>

    <header>
        <h1>Nuevo vehículo</h1>
    </header>

    <form action="/admin/new-vehicle" method="post" enctype="multipart/form-data" class="row g-3">
        <div class="col-md-6">
            <label for="brand" class="form-label">Marca</label>
            <input type="text" class="form-control" id="brand" name="brand">
        </div>
        <div class="col-md-6">
            <label for="model" class="form-label">Modelo</label>
            <input type="text" class="form-control" id="model" name="model">
        </div>
        <div class="col-md-6">
            <label for="year" class="form-label">Año</label>
            <input type="number" class="form-control" id="year" name="year">
        </div>
        <div class="col-md-6">
            <label for="color" class="form-label">Color</label>
            <input type="text" class="form-control" id="color" name="color">
        </div>
        <div class="col-md-6">
            <label for="price" class="form-label">Precio</label>
            <input type="number" class="form-control" id="price" name="price">
        </div>
        <div class="col-md-6">
            <label for="available" class="form-label">Disponible</label>
            <select id="available" class="form-select" name="available">
                <option value="true">Sí</option>
                <option value="false">No</option>
            </select>
        </div>
        <div class="col-md-6">
            <label for="transmission" class="form-label">Transmisión</label>
            <select id="transmission" class="form-select" name="transmission">
                <option value="manual">Manual</option>
                <option value="automatic">Automática</option>
            </select>
        </div>
        <div class="col-md-6">
            <label for="fuel" class="form-label">Combustible</label>
            <select id="fuel" class="form-select" name="fuel">
                <option value="gasoline">Gasolina</option>
                <option value="diesel">Diésel</option>
                <option value="electric">Eléctrico</option>
                <option value="hybrid">Híbrido</option>
            </select>
        </div>
        <div class="col-md-6">
            <label for="doors" class="form-label">Puertas</label>
            <input type="number" class="form-control" id="doors" name="doors">
        </div>
        <div class="col-md-6">
            <label for="passengers" class="form-label">Pasajeros</label>
            <input type="number" class="form-control" id="passengers" name="passengers">
        </div>
        <div class="col-md-6">
            <label for="luggage" class="form-label">Equipaje</label>
            <input type="number" class="form-control" id="luggage" name="luggage">
        </div>
        <div class="col-md-6">
            <label for="type" class="form-label">Tipo</label>
            <select id="type" class="form-select" name="type">
                <option value="Sedán">Sedán</option>
                <option value="SUV">SUV</option>
                <option value="Pickup">Pikup</option>
                <option value="Van">Van</option>
            </select>
        </div>
        <div class="col-md-6">
            <label for="officeId" class="form-label">Oficina</label>
            <select id="officeId" class="form-select" name="officeId">
                <% if (!offices) { %>
                    <option value="">No hay oficinas</option>
                <% } %> 
                <% offices.forEach(offices => { %>
                    <option value="<%= offices.id %>"><%= offices.name %></option>
                <% }); %>
            </select>
        </div>
        <div class="col-md-6">
            <label for="image" class="form-label">Imagen</label>
            <input type="file" class="form-control form-control-sm" id="image" name="image">
        </div>
        <div class="col-12">
            <button type="submit" class="btn btn-primary">Guardar</button>
        </div>
    </form>
    <a class="back" href="/admin/vehicles">Volver</a>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>

</html>